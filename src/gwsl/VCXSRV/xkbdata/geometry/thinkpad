		    { <FK05>, 6 }, <FK06>, <FK07>, <FK08>,
		    { <FK09>, 6 }, <FK10>, <FK11>, <FK12>
	    };
	};
    }; // End of "Function" section

    section "Control" {
	left = 2;
	top = 109;
	key.shape = "NORM";
	row {
	    top = 1;
	    keys { <FN>, { <LCTL>, "LCTL" }, { <LWIN>, "LWIN" }, <LALT>,
