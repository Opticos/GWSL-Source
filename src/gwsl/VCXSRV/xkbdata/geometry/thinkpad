    shape "STIK" { cornerRadius = 3.5, { [7, 7] } };

    solid "STIK" {
	priority = 255;
	color = "red";
	shape = "STIK";
	top = 85.5;
	left = 125.5;
    };

    section "Alpha" {
	left = 2;
	top = 33;
	key.shape = "NORM";
	row {
	    top = 1;
	    keys { <TLDE>, <AE01>, <AE02>, <AE03>, <AE04>,
